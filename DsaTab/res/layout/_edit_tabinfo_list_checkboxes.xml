<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/popup_edit_show_unused"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_unused" />

    <CheckBox
        android:id="@+id/popup_edit_show_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_favorites" />

    <CheckBox
        android:id="@+id/popup_edit_show_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_normal" />

    <CheckBox
        android:id="@+id/popup_edit_include_modifiers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consider_modificators" />
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="?android:attr/dividerHorizontal" />

</LinearLayout>